    <div class="wdb-login align-items-center">
        <div class="justify-content-center">
            <div class="card-group">
                <div class="card text-white fdl-color pad-box">
                    <div>
                        <div class="feature">
                            <p class="text-center">Own A Shop</p>
                            <ul>
                                <li>Easily own an online shop</li>
                                <li>Dashboard to Manage your shop</li>
                                <li>Don't have a shop yet?</li>
                            </ul>
                            <p class="text-center"><a asp-controller="Seller" asp-action="Register">Create a Shop</a></p>
                        </div>
                    </div>
                </div>
                <div class="card" style="width: 355px;">
                    <form asp-controller="Login" asp-action="Seller" method="post">
                        <div class="card-left">
                            <p class="text-center">Please log-in to shop</p>

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <label class="login-label" asp-for="Username">Email</label>
                            <div style="margin-bottom: 20px;">
                                <img src="~/images/user.png" class="img-pos" style="width:37px">
                                <input asp-for="Username" class="form-control" type="text" placeholder="Email">
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <label class="login-label" asp-for="Password">Password</label>
                            <div style="margin-bottom: 50px;">
                                <img src="~/images/lock.png" class="img-pos" style="width:37px">
                                <input asp-for="Password" class="form-control" type="password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            @if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
                            {
                                @if (ViewBag.Message != null)
                                {
                                    <span class="text-danger">@ViewBag.Messge</span>

                                }


                            }
                            <div class="text-center">
                                <button class="btn fdl-color text-white" id="login-btn" type="submit">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>




 


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
